# Polymarket Weather Bot - Environment Variables
# Copy this file to .env and fill in your values

# Simmer SDK (for production trading)
# Get API key from https://simmer.markets/
SIMMER_API_KEY=your_api_key_here
SIMMER_MODE=sandbox  # sandbox | production

# External wallet mode (recommended for security)
# Your Polygon wallet private key (NEVER commit this!)
SIMMER_PRIVATE_KEY=your_private_key_here

# Polymarket CLOB (optional, for direct API access)
# Usually not needed when using Simmer SDK
# POLYMARKET_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# Database
DATABASE_PATH=weather_bot.db
